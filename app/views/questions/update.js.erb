<% if @question.errors.present? %>
    $('.question-errors').empty();
    <% @question.errors.full_messages.each do |msg| %>
        $('.question-errors').append('<p><%= j msg %></p>');
    <% end %>
<% else %>
    <% publish_to "/questions/#{@question.id}" do %>
        $('.question').html('<%= j render @question %>');
    <% end %>
<% end %>
$('.notice').html('<%= j render 'layouts/notice' %>');
